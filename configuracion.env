# ========= CONFIGURACIÓN OVH =========
OVH_ENDPOINT=ovh-eu             # ovh-eu, ovh-ca, ovh-us
OVH_APP_KEY=tu_app_key
OVH_APP_SECRET=tu_app_secret
OVH_CONSUMER_KEY=tu_consumer_key
OVH_ZONE=tudominio.com          # Zona DNS
OVH_SUBDOMAIN=casa              # Subdominio, vacío para raíz (@)

# ========= OPCIONES =========
OVH_TTL=300                     # TTL en segundos
WANT_IPV6=0                     # 1 para AAAA, 0 solo A
FORCE_REMOTE_CHECK=0            # 1 para forzar sincronización siempre

# ========= SERVICIOS DE IP =========
IP_SERVICE_V4=https://api.ipify.org
IP_SERVICE_V6=https://api6.ipify.org

# ========= RUTA ARCHIVO DE ESTADO =========
STATE_FILE=/var/lib/ovh_dns_updater/state.json
